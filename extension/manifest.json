{
  "manifest_version": 2,
  "name": "Klavo Helper",
  "version": "0.1.0",
  "description": "Improves klavogonki.ru",

  "applications": {
    "gecko": {
      "id": "klavo-helper@mdnsk",
      "strict_min_version": "64.0"
    }
  },

  "background": {
    "scripts": [
      "dist/background-script.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["http://klavogonki.ru/*"],
      "js": [
        "dist/content-script.js"
      ]
    }
  ],

  "permissions": [
    "tabs",
    "*://klavogonki.ru/*"
  ]
}
